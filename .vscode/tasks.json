{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build example",
      "command": "python3 do build -e ${command:cpptools.activeConfigName}",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "group": "builders",
        "panel": "shared",
        "clear": true
      },
    },
    {
      "label": "Rebuild example",
      "command": "python3 do build -e ${command:cpptools.activeConfigName} -p",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "group": "builders",
        "panel": "shared",
        "clear": true
      },
    },
    {
      "label": "Flash example",
      "command": "python3 do flash -e ${command:cpptools.activeConfigName}",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "group": "builders",
        "panel": "shared",
        "clear": true
      },
    },
    {
      "label": "Build and run example",
      "group": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "FlashWhenChanged",
        "Serial monitor",
        "Reset"
      ]
    },
    {
      "label": "FlashWhenChanged",
      "command": "python3 do flash -e ${command:cpptools.activeConfigName} --when-changed",
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "group": "builders",
        "panel": "shared",
        "clear": true
      },
    },
    {
      "label": "Reset",
      "command": "python3 do reset",
      "problemMatcher": [
        "$gcc"
      ],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "group": "builders",
        "panel": "shared"
      },
    },
    {
      "label": "PreDebug",
      "dependsOrder": "sequence",
      "dependsOn": [
        "FlashWhenChanged",
        "Serial monitor"
      ]
    },
    {
      "label": "Serial monitor",
      "type": "shell",
      "command": "python3 do monitor",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true,
        "group": "builders"
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "thisShouldNotMatch",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "thisShouldNotMatch",
          "endsPattern": "^--- Quit:"
        }
      },
      "runOptions": {}
    },
  ],
 }